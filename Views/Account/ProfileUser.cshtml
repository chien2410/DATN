@model ShopDGHouse.Models.User
@{
    ViewBag.Title = "ProfileUser";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/home"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Tài khoản</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3>Thông tin</h3>
            <p>Tài khoản của bạn</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <hr />
            <h4>Họ tên: @Model.Fullname</h4>
            <h4>Email: @Model.Email</h4>
            <h4>Tài khoản đăng nhập: @Model.Username</h4>
            <h5><a href="/changepass/@Model.Id">Đổi mật khẩu</a></h5>
        </div>        
    </div>
</div>